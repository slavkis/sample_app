
<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.avatar.url(:thumb), class: "profile-photo-lg" if @user.avatar? %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>