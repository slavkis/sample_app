
<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.avatar.url(:thumb), class: "profile-photo-lg" if @user.avatar? %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h4>You have <%= @user.microposts.count %> posts:</h4>
      <ol class="microposts">
        <%= render @microposts %>
     </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>