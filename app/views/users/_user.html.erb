<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="people-nearby">
              
              <div class="nearby-user">
                <div class="row">
                  <div class="col-md-2 col-sm-2">
                    <%= image_tag user.avatar.url(:thumb), class: "profile-photo-lg", alt: "user" if user.avatar? %>
                  </div>
                  <div class="col-md-7 col-sm-7">
                    <h4><%= link_to user.name, user %></h4>
                    <p>Software Engineer</p>
                    <% if current_user.admin? && !current_user?(user) %>
                    <h6>
                      <%= link_to "delete profile", user, method: :delete, class: "text-muted", data: { confirm: "You sure?" } %>
                      <% end %>
                    </h6>
                  </div>
                  <div class="col-md-3 col-sm-3">
                  <button class="btn btn-primary pull-right">Add to bros</button>
                  </div>
                </div>
              </div>

            </div>
      </div>
  </div>
</div>
