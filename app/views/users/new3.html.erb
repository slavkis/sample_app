<% provide(:title, 'Sign up') %>
<h1>Sign up, bro!</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= f.label :name, "Bro-name:" %>
        <%= f.text_field :name %>
        <%= f.label :email, "Bro-mail:" %>
        <%= f.email_field :email %>
        <%= f.label :password, "Password:"%>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation, "Confirmation:" %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "Tap here to become a bro!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  