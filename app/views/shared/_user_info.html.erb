<% if current_user.avatar? %>
	<%= image_tag current_user.avatar.url(:thumb), class: "profile-photo-lg", alt: "user" %>
<% else %>
  <img src="/assets/default_avatar.jpg" width="200" height="170" style="float:initial">
<% end %>

<h4><%= current_user.name %></h4>
<span><%= link_to "view my profile", current_user %></span>
<span><%= pluralize(current_user.microposts.count, "micropost") %></span>
<h4><%= current_user.user_info if current_user.user_info %></h4>
