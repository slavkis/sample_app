<% provide(:title, "Log in") %>
<div class="text-center" style="padding:50px 15">
	<h4>Log in, bro!</h4></br>
	<div class="logo"></div>
	<div class="login-form-1">
		<%= form_for(:session, url: login_path) do |f| %>
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
						<%= f.label :email, class: "sr-only" %>
						<%= f.email_field :email, class: 'form-control', placeholder: "bro-mail" %>
					</div>
					<div class="form-group">
						<%= f.label :password, class: "sr-only" %>
						<%= f.password_field :password, class: 'form-control', placeholder: "password" %>
					</div>
					<div class="form-group">
            <%= link_to "(forgot password?)", new_password_reset_path %>
						<%= f.label :remember_me, class: "form-control" do %>
							<%= f.check_box :remember_me %>
              <span>Remember me</span>
						<% end %>
					</div>
				</div>
			</div>
			</br>
      <%= f.submit "Log in", class: "btn btn-info" %>
			<div class="etc-login-form">
      </br>
			 <p>New bro?? <%= link_to "Tap here", signup_path %></p>
			</div>
		<% end %>
	</div>
</div>

